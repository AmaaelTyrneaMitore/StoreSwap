    <%- include('../includes/navigation.ejs') %>

      <main>
        <div class="container margin-bottom-sm">
          <!-- CARD GRID -->
          <div class="grid grid--2-cols card product-details-container">
            <!-- CARD -->
            <div class="product-img-container">
              <img src="/images/test-product.jpg" alt="<%= product.title %>" class="product-img" />
            </div>

            <div class="product-details product-details--lg">
              <p class="product-title">
                <%= product.title %>
              </p>
              <p class="product-description">
                <%= product.description %>
              </p>
              <p class="product-price"><span>$</span>
                <%= product.price %>
              </p>
            </div>
            <form action="/cart" method="post">
              <button class="submit-btn" type="submit">Add To Cart</button>
              <input type="hidden" name="_id" value="<%= product._id %>">
            </form>
          </div>


