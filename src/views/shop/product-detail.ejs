<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/error.css" />
<%- include('../includes/head.ejs') %>

</head>
<body>
  <img class="background" src="/images/background@2x.jpg" alt="" />
  <div class="sphere1"></div>
  <div class="sphere2"></div>
  <div class="sphere3"></div>
  <div class="sphere4" style="top: 52rem; right: 22rem;"></div>

  <%- include('../includes/navigation.ejs') %>
    <main>
      <div class="container margin-bottom-sm">
        <!-- CARD GRID -->
        <div
          class="product-details-container error-card grid grid--2-cols card"
        >
          <!-- CARD -->
          <div class="product-img-container">
            <img
              src="/images/test-product.jpg"
              alt="Purple Shoes"
              class="product-img"
            />
          </div>

          <div class="product-details product-details--lg">
            <p class="product-title"><%= product.title %></p>
            <p class="product-description"><%= product.description %></p>
            <p class="product-price"><span>$</span><%= product.price %></p>
          </div>
          <form action="/cart" method="post">
            <button class="submit-btn" type="submit">Add To Cart</button>
            <input type="hidden" name="id" value="<%= product.id %>">
          </form>
        </div>

        
<%- include('../includes/end.ejs') %>