{
  "name": "storeswap",
  "version": "1.0.0",
  "description": "It is a full-fledged ECommerce application powered by Express, NodeJS, EJS and TypeScript that implements MVC pattern and the API adheres to the REST architecture.",
  "type": "module",
  "main": "dist/app.js",
  "engines": {
    "node": "v16.16.0"
  },
  "scripts": {
    "build": "./node_modules/typescript/bin/tsc",
    "start": "node ./dist/app.js",
    "start:dev": "./node_modules/nodemon/bin/nodemon.js --config ./nodemon.dev.json -e ts --exec \"npm run build && npm start\"",
    "start:prod": "./node_modules/nodemon/bin/nodemon.js --config ./nodemon.prod.json -e ts --exec \"npm run build && npm start\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmaaelTyrneaMitore/StoreSwap.git"
  },
  "keywords": [
    "express",
    "nodejs",
    "ejs",
    "typescript",
    "rest",
    "ecommerce",
    "beginner",
    "project",
    "stripe",
    "pdfkit",
    "sendgrid",
    "cookies",
    "session",
    "node",
    "mongo",
    "mongodb",
    "mongoose",
    "javascript",
    "html",
    "css"
  ],
  "author": "Shashank Singh",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/AmaaelTyrneaMitore/StoreSwap/issues"
  },
  "homepage": "https://github.com/AmaaelTyrneaMitore/StoreSwap#readme",
  "dependencies": {
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "mongodb": "^4.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "typescript": "^4.8.3"
  }
}
